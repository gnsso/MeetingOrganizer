@model MeetingOrganizer.Server.Models.MeetingModel

@{
    ViewBag.Title = Model.Subject;
}

<h2>@Model.Subject</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FinishedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinishedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Participants)
        </dt>

        <dd>
            <ul>
                @foreach (var participant in Model.Participants)
                {
                    <li>@participant.Name - @participant.Email</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Güncelle", "Update", new { model = Model }) |
    @Html.ActionLink("Tüm toplantılar", "Index")
</p>
