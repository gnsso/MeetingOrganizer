@model IEnumerable<MeetingOrganizer.Server.Models.MeetingModel>

@{
    ViewBag.Title = "Toplantılar";
}

<h2>Planlanmış toplantılar</h2>

<p>
    @Html.ActionLink("Yeni toplantı planla", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinishedDate)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Update", new { id = item.Id }) |
            @Html.ActionLink("Görüntüle", "Details", new { id = item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
